<div class="Account-Head-div">
    <h2>Welcome to</h2>
    <h1>The Garden Of Your Mind<h1>
    <h3>Wont You Be My Neighbor?</h3>
</div>
@if (User.Identity.IsAuthenticated)
{
    <p id="account-index-p">Welcome @User.Identity.Name!</p>
    <p class="join-game">@Html.ActionLink("Join Game","Game","Home")</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn logout-btn" value="Log out" />
    }
}
else
{
    <p class="btn log-in">@Html.ActionLink("Log in", "Login")</p>
    <p class="btn register">@Html.ActionLink("Register", "Register")</p>
}